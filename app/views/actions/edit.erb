<h1>Edit Job Hunt Action</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form method="POST" action="/actions/new">
	<h3><label for="action_type">Action Type</label></h3>
	<br>
	<select name="action_type">
		<% @action_types.each do |action_type| %>
			<% if action_type == @action.action_type %>
				<option value="<%= action_type %>" selected><%= action_type %></option>
			<% else %>
				<option value="<%= action_type %>"><%= action_type %></option>
			<% end %>
		<% end %>
	</select>
	<h3><label for="date">Date</label></h3>
	<br>
	<input type="date" name="date" value="<%= @action.date %>">
	<h3><label for="note">Note</label></h3>
	<br>
	<input type="text" name="note" value="<%= @action.note %>">
	<h3><label for="company_id">Company</label></h3>
	<br>
	<select name="company_id">
		<% Company.all.each do |company| %>
			<% if company == @action.company %>
				<option value="<%= company.id %>" selected><%= company.name %></option>
			<% else %>
				<option value="<%= company.id %>"><%= company.name %></option>
			<% end %>
		<% end %>
	</select>
	<br>
	<input type="submit" value="Submit">
</form>