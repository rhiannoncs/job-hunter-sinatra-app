<h1>Edit Company Listing</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form method="POST" action="/companies/<%= @company.id %>">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<h3><label for="company_name">Company Name:</label></h3>
	<input type="text" name="name" value="<%= @company.name %>">
	<h3><label for="location">Location:</label></h3>
	<input type="text" name="location" value="<%= @company.location %>">
	<h3><label for="website">Website:</label></h3>
	<input type="text" name="website" value="<%= @company.website %>">
	<br>
	<input type="submit" value="Edit">
</form>