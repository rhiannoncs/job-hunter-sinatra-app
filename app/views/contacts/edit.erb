<h1>Edit Contact Listing</h1>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form method="POST" action="/contacts/<%= @contact.id %>">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<h3><label for="name">Name:</label></h3>
	<input type="text" name="name" value="<%= @contact.name %>">
	<h3><label for="title">Title:</label></h3>
	<input type="text" name="title" value="<%= @contact.title %>">
	<h3><label for="phone">Phone:</label></h3>
	<input type="text" name="phone" value="<%= @contact.phone %>">
	<h3><label for="email">Email:</label></h3>
	<input type="text" name="email" value="<%= @contact.email %>">
	<h3><label for="linkedin">LinkedIn:</label></h3>
	<input type="text" name="linkedin" value="<%= @contact.linkedin %>">
	<h3><label for="company_id">Company:</label></h3>
	<br>
	<select name="company_id">
		<% Company.all.each do |company| %>
			<% if company == @contact.company %>
				<option value="<%= company.id %>" selected><%= company.name %></option>
			<% else %>
				<option value="<%= company.id %>"><%= company.name %></option>
			<% end %>
		<% end %>
	</select>
	<input type="submit" value="Submit">
</form>